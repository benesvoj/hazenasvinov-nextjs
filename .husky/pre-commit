#!/bin/sh

# Check if API routes have changed
API_CHANGED=$(git diff --cached --name-only | grep "^src/app/api/")

if [ -n "$API_CHANGED" ]; then
  echo "ğŸ”„ API routes changed, regenerating API constants..."
  npm run generate:api-routes

  if [ $? -eq 0 ]; then
    # Add the generated file if it changed
    git add src/lib/api-routes.ts
    echo "âœ… API routes regenerated and staged"
  else
    echo "âŒ Failed to regenerate API routes"
    exit 1
  fi
fi

# Run lint-staged (runs ESLint, Prettier, and TypeScript on staged files)
echo "ğŸ” Running pre-commit checks on staged files..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Pre-commit checks failed. Please fix the errors before committing."
  exit 1
fi

echo "âœ… All checks passed! Proceeding with commit..."